<script src="//maps.google.com/maps/api/js?key=#{ENV['google_maps_api_key']}"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<% 
	@upcoming_events = Event.upcoming
	@past_events_count = Event.past.count
	
	@hash = Gmaps4rails.build_markers(@upcoming_events) do |event, marker|
		event.geocode
  		marker.lat event.latitude
		marker.lng event.longitude
		marker.infowindow event.title
	end
%>

<div class="Vlt-grid Vlt-grid--narrow" style="margin-bottom: 20px;">
	<div class="Vlt-col Vlt-col--3of4">
		<div id="map-all-wrapper">
  			<div id="map" style='width: 800px; height: 400px;'></div>
		</div>
		<div id="map-search-wrapper">
			<div id="map-search"></div>
		</div>
	</div>

	<div class="Vlt-col">
		<div class="Vlt-grid Vlt-grid--middle">
			<div class="Vlt-col">
				<%= form_with url: '/event_search', :method => :get, local: false do %>
					<div id="SearchComponent" key="SearchComponent" class="Vlt-form__element Vlt-form__element--big">
						<div class="Vlt-composite">
							<div class="Vlt-composite__wrapper">
								<div class="Vlt-input">
									<input type="text" id="searchbox" name="query" placeholder="Search" name="query" autocomplete="off" value="<%= @search_term || '' %>">
								</div>
							</div>
							<div class="Vlt-composite__append">
								<%= submit_tag "Search", :class => "Vlt-btn" %>
							</div>
						</div>
					</div>	
				<% end %>
			</div>
			<div class="Vlt-grid__separator"></div>
			<div class="Vlt-col">
    		<%= link_to 'Subscribe to feed', feeds_events_url(protocol: :webcal, format: :ics), class: 'Vlt-btn Vlt-btn--large Vlt-btn--secondary Vlt-btn--app' %>
			</div>
			<div class="Vlt-grid__separator"></div>
			<div class="Vlt-col">
    		<% if @past_events_count > 0 %>
      		<%= link_to "View #{pluralize @past_events_count, 'past event'}", community_past_events_path, class: 'Vlt-btn Vlt-btn--large Vlt-btn--tertiary Vlt-btn--app' %>
    		<% end %>
			</div>
		</div>
	</div>
</div>


<div id="community-events" class="Vlt-grid">
<% @upcoming_events.each do |event| %>
	<div class="Vlt-col Vlt-col--1of3">
		<div class="Vlt-card">
			<h3><%= link_to event.title, event.url, target: '_blank' %></h3>
			<p class="community-event__date Vlt-grey-darker"><svg class="Vlt-icon Vlt-icon--small Vlt-icon--text-bottom Vlt-grey-dark" aria-hidden="true"><use xlink:href="/symbol/volta-icons.svg#Vlt-icon-calendar"/></svg><%= date_range event.starts_at, event.ends_at %></p>
			<p><%= event.description %></p>
		</div>
	</div>
<% end %>
</div>
<div id="event-search-results"></div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	markers = handler.addMarkers(<%= raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>